<Window x:Class="Tkach.Lab5.Interpreter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tkach.Lab5.Interpreter"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Input:" 
                   Margin="5 5 0 0"/>

        <TextBox Grid.Row="1" 
                 x:Name="inputTextBox" 
                 Margin="5" 
                 TextWrapping="Wrap"/>

        <Button Grid.Row="2" 
                x:Name="CorrectionButton" 
                Margin="40 10" 
                Content="Correct structure mistakes"
                Click="CorrectionButton_Click"/>

        <TextBlock Grid.Row="3" 
                   Text="Output:" 
                   Margin="5 5 0 0"/>

        <TextBox Grid.Row="4" 
                 x:Name="outputTextBox" 
                 Margin="5" 
                 TextWrapping="Wrap"/>
    </Grid>
</Window>
