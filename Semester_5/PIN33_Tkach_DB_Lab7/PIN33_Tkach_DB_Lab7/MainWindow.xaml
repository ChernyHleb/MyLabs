<Window x:Class="PIN33_Tkach_DB_Lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIN33_Tkach_DB_Lab7"
        
        xmlns:views="clr-namespace:PIN33_Tkach_DB_Lab7.Views"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.12*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:NavigationBar Grid.Row="0" x:Name="NavBar"/>

        <ContentControl x:Name="MainDataTable" Content="{Binding SelectedTable}" 
                        Grid.Row="1"/>

    </Grid>
</Window>
