<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="Tkach.Networks.Sender" Height="391" Width="325">
    <Grid Margin="10,0,-10,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Mail  Reciever Address" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="136" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb_adress" HorizontalAlignment="Left" Margin="10,31,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="194"/>
        <Label Content="Mail Text" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top" Width="60" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb_text" HorizontalAlignment="Left" Margin="10,139,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Height="196" RenderTransformOrigin="0.516,0.51" TextChanged="tb_text_TextChanged" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_send" Content="SEND" HorizontalAlignment="Left" Margin="10,345,0,0" VerticalAlignment="Top" Height="26" Width="305" Click="ClickSendButton" Grid.ColumnSpan="2"/>
        <Label Content="Mail  Theme&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="136" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb_adress_Copy" HorizontalAlignment="Left" Margin="10,85,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="194"/>

    </Grid>
</Window>
