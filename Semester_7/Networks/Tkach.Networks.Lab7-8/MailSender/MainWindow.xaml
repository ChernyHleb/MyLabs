<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Grid>
        <Label Content="Адрес почты" HorizontalAlignment="Left" Margin="350,50,0,0" VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb_adress" HorizontalAlignment="Left" Margin="300,80,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Текст сообщения" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Width="110" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb_text" HorizontalAlignment="Center" Margin="0,160,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="200"/>
        <TextBox x:Name="l_err"  HorizontalAlignment="Left" Margin="43,372,0,0" VerticalAlignment="Top" Width="696" Height="55" HorizontalContentAlignment="Center" TextWrapping="Wrap"/>
        <Button x:Name="btn_send" Content="Отправить сообщение" HorizontalAlignment="Left" Margin="641,319,0,0" VerticalAlignment="Top" Height="40" Width="135" Click="ClickSendButton"/>

    </Grid>
</Window>
